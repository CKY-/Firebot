{
    "version": "6.0.0",
    "license": "GPL-3.0",
    "name": "firebot",
    "productName": "Firebot",
    "description": "A general purpose highly-customizable chat bot for streamers",
    "author": "Crowbar Tools",
    "keywords": [
        "chat",
        "chatbot",
        "bot",
        "stream",
        "streamer",
        "twitch",
        "twitch.tv"
    ],
    "homepage": "https://github.com/crowbartools/firebot",
    "repository": {
        "type": "git",
        "url": "https://github.com/crowbartools/firebot.git"
    },
    "bugs": {
        "url": "https://github.com/crowbartools/firebot/issues"
    },
    "main": "./dist/index.js",
    "scripts": {
        "start:dev": "webpack build -c ./config/webpack/main.js && concurrently -k -s=first \"webpack serve -c ./config/webpack/renderer.js --hot\" \"electron ./build/main/index.js\"",
        "start:prod": "webpack build -c ./config/webpack/all.js --node-env production && electron ./build/main/index.js"
    },
    "volta": {
        "node": "14.18.1"
    },
